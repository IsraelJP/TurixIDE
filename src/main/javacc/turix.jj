    }

void Start() :
{}
{
    ( Exp() | DeclaracionVar() ) <EOF>
}

void Exp() :
{}
{
    Term() ( ( <MAS> | <MENOS> ) Term() )*
    
    
}


void DeclaracionVar() :
{}
{
    <VAR> <LETTER> <IGUAL> <NUM>
}



void Term() :
{}
{
    <NUM>
}
