    | <SWITCH: "switch">
    | <WHERE: "where">
    | <WHILE: "while">

    // Palabras reservadas para tipos y contexto
    | <AS: "as">
    | <CATCH: "catch">
    | <FALSE: "false">
    | <IS: "is">
    | <NIL: "nil">
